<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.fragment_view_student">

    <LinearLayout
        android:id="@+id/linear_layout_add_student"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

    <RelativeLayout
        android:id="@+id/relative_layout_view_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative_layout_student_image_view_student"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageButton
                android:id="@+id/pictureImageButton_view_student"
                android:layout_alignParentLeft="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="12dp"
                android:background="@color/material_blue_grey_950"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@android:drawable/sym_def_app_icon" />

        </RelativeLayout>

        <EditText
            android:id="@+id/edit_text_student_first_name_view_student"
            android:hint="First name"
            android:layout_below="@+id/relative_layout_student_image_view_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginBottom="-5dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:imeOptions="actionNext"
            android:focusable="false"
            android:clickable="false"
            android:editable="false"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"/>

        <EditText
            android:id="@+id/edit_text_student_last_name_view_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_below="@+id/edit_text_student_first_name_view_student"
            android:hint="Last Name"
            android:imeOptions="actionNext"
            android:focusable="false"
            android:clickable="false"
            android:editable="false"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"/>

        <EditText
            android:id="@+id/edit_text_student_id_view_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_below="@+id/edit_text_student_last_name_view_student"
            android:hint="Student ID"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:focusable="false"
            android:clickable="false"
            android:editable="false"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"/>

        <EditText
            android:id="@+id/edit_text_student_phone_view_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_below="@+id/edit_text_student_id_view_student"
            android:hint="Phone Number"
            android:inputType="number"
            android:focusable="false"
            android:imeOptions="actionNext"
            android:clickable="false"
            android:editable="false"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"/>

        <EditText
            android:id="@+id/edit_text_student_address_view_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_below="@+id/edit_text_student_phone_view_student"
            android:hint="Address"
            android:imeOptions="actionDone"
            android:clickable="false"
            android:focusable="false"
            android:editable="false"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"/>

        <CheckBox
            android:id="@+id/checkbox_add_student_view_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/edit_text_student_address_view_student"
            android:text="Checked"
            android:clickable="false"/>

    </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_layout_birth_date_view_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_layout_view_student"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_birth_time"
                android:text="Birth Time"
                android:textSize="18sp"
                android:layout_width="110dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                />

            <TextView
                android:id="@+id/text_birth_date_view_student"
                style="android:Widget.Holo.Light.Spinner"
                android:layout_height="40dp"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:textColor="@color/material_blue_grey_800"
                android:gravity="center"/>
        </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout_birth_time_view_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_birth_time_view_student"
            android:text="Birth Time"
            android:textSize="18sp"
            android:layout_width="110dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            />

        <TextView
            android:id="@+id/birth_time_button_view_student"
            style="android:Widget.Holo.Light.Spinner"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:textColor="@color/material_blue_grey_800"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
</FrameLayout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_fragment_add_student"
    tools:context=".fragments.FragmentAddStudent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linear_layout_add_student"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

    <RelativeLayout
        android:id="@+id/relative_layout_add_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

        <RelativeLayout
            android:id="@+id/relative_layout_student_image_add_student"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageButton
                android:id="@+id/pictureImageButton_add_student"
                android:layout_alignParentLeft="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="5dp"
                android:background="@color/material_blue_grey_950"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@android:drawable/sym_def_app_icon" />

        </RelativeLayout>

        <EditText
            android:id="@+id/edit_text_student_first_name_add_student"
            android:hint="First name"
            android:layout_below="@+id/relative_layout_student_image_add_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginBottom="-7dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:imeOptions="actionNext" />

        <EditText
            android:id="@+id/edit_text_student_last_name_add_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginBottom="-7dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_below="@+id/edit_text_student_first_name_add_student"
            android:hint="Last Name"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/edit_text_student_id_add_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-7dp"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_below="@+id/edit_text_student_last_name_add_student"
            android:hint="Student ID"
            android:inputType="number"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/edit_text_student_phone_add_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-7dp"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_below="@+id/edit_text_student_id_add_student"
            android:hint="Phone Number"
            android:inputType="number"
            android:imeOptions="actionNext"/>

        <EditText
            android:id="@+id/edit_text_student_address_add_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="-7dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/edit_text_student_phone_add_student"
            android:hint="Address"
            android:imeOptions="actionDone"/>

        <CheckBox
            android:id="@+id/checkbox_add_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/edit_text_student_address_add_student"
            android:text="Checked" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_layout_birth_date_add_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_layout_add_student"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/text_birth_date"
        android:text="Birth Date"
        android:textSize="18sp"
        android:layout_width="110dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        />

    <Button
        android:id="@+id/birth_date_button"
        style="android:Widget.Holo.Light.Spinner"
        android:layout_height="40dp"
        android:layout_width="100dp"
        android:layout_weight="1"
        android:paddingLeft="12dp"
        android:textColor="@color/material_blue_grey_800"
        android:gravity="center"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_birth_time_add_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_layout_add_student"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_birth_time"
                android:text="Birth Time"
                android:textSize="18sp"
                android:layout_width="110dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                />

            <Button
                android:id="@+id/birth_time_button"
                style="android:Widget.Holo.Light.Spinner"
                android:layout_height="40dp"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:textColor="@color/material_blue_grey_800"
                android:gravity="center"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_buttons_add_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:id="@+id/button_cancel_add_student"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:id="@+id/button_save_student_add_student"
            android:layout_weight="1"
            />
        </LinearLayout>
    </RelativeLayout>

    </LinearLayout>
</ScrollView>
</FrameLayout>

